<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyStory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_middle_purple</item>
        <item name="colorPrimaryDark">@color/primary_dark_purple</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/primary_light_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>


    <attr name="colorVariantLight" format="reference" />
    <attr name="colorVariantMiddle" format="reference" />

    <style name="AppThemePurple" parent="Theme.MyStory">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark_purple</item>
        <item name="colorVariantMiddle">@color/primary_middle_purple</item>
        <item name="colorVariantLight">@color/primary_light_purple</item>
        <item name="colorPrimaryVariant">@color/primary_light_purple</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/primary_light_purple</item>
        <item name="android:colorPrimary">@color/primary_dark_purple</item>
        <item name="android:colorAccent">@color/primary_light_purple</item>
    </style>

    <style name="AppThemePink" parent="Theme.MyStory">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark_pink</item>
        <item name="colorVariantMiddle">@color/primary_middle_pink</item>
        <item name="colorVariantLight">@color/primary_light_pink</item>
        <item name="colorPrimaryVariant">@color/primary_light_pink</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primary_dark_pink</item>
        <item name="android:colorAccent">@color/primary_light_pink</item>
    </style>

    <style name="AppThemeBlue" parent="Theme.MyStory">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorVariantMiddle">@color/primary_middle_blue</item>
        <item name="colorVariantLight">@color/primary_light_blue</item>
        <item name="colorPrimaryVariant">@color/primary_light_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primary_dark_blue</item>
        <item name="android:colorAccent">@color/primary_light_blue</item>
    </style>


    <style name="AppThemeYellow" parent="Theme.MyStory">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark_yellow</item>
        <item name="colorVariantMiddle">@color/primary_middle_yellow</item>
        <item name="colorVariantLight">@color/primary_light_yellow</item>
        <item name="colorPrimaryVariant">@color/primary_light_yellow</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primary_dark_yellow</item>
        <item name="android:colorAccent">@color/primary_light_yellow</item>
    </style>


    <style name="AppThemeBrown" parent="Theme.MyStory">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark_brown</item>
        <item name="colorVariantMiddle">@color/primary_middle_brown</item>
        <item name="colorVariantLight">@color/primary_light_brown</item>
        <item name="colorPrimaryVariant">@color/primary_light_brown</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primary_dark_brown</item>
        <item name="android:colorAccent">@color/primary_light_brown</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.MyStory">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorVariantMiddle">@color/primary_middle_green</item>
        <item name="colorVariantLight">@color/primary_light_green</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primary_dark_green</item>
        <item name="android:colorAccent">@color/primary_light_green</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
    </style>


    <style name="Theme.MyStory.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primary_light_purple</item>
        <item name="android:itemBackground">@color/primary_middle_purple</item>


    </style>

    <style name="Theme.MyStory.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyStory.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="CustomSliderTooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- Tooltip text color -->
        <item name="android:textColor">@color/primary_light_brown</item>
        <!-- Tooltip background color -->
        <item name="backgroundTint">@color/primary_dark_brown</item>
    </style>
</resources>