<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Titre :"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorVariantLight" />

        <EditText
            android:id="@+id/book_create_title"
            android:hint="Le titre du livre"
            android:textColorHint="?attr/colorPrimaryDark"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorVariantLight" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Auteur :"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorVariantLight" />

        <EditText
            android:id="@+id/book_create_autor"
            android:hint="Le nom de l'auteur"
            android:textColorHint="?attr/colorPrimaryDark"
            android:textAlignment="center"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorVariantLight" />
    </LinearLayout>


</LinearLayout>