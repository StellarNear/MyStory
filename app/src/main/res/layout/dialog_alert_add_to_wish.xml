<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/popup_add_book_width"
    android:layout_height="@dimen/popup_add_book_height"
    android:padding="@dimen/general_margin"
    android:background="@drawable/background_alert_add_book_from_search">
    <TextView
        android:text="Souhaites tu ajouter ce livre Ã  ta liste d'envie ?"
        android:layout_width="match_parent"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_light_yellow"
    android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:padding="@dimen/general_margin"
            android:textColor="@color/primary_light_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre :"
            android:textAlignment="textEnd"/>
        <TextView
            android:padding="@dimen/general_margin"
            android:textColor="@color/primary_light_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auteur :"
            android:textAlignment="textEnd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/alert_title_info"
            android:padding="@dimen/general_margin"
            android:textColor="@color/primary_light_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="le titre"
            android:textAlignment="textStart"/>
        <TextView
            android:id="@+id/alert_author_info"
            android:padding="@dimen/general_margin"
            android:textColor="@color/primary_light_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="l'auteur"
            android:textAlignment="textStart"/>
    </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>